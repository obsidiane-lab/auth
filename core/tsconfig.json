{
    "compilerOptions": {
        "target": "ES2019",
        "module": "ESNext",
        "moduleResolution": "Node",
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "types": ["webpack-env"]
    },
    "include": [
        "assets/**/*.ts",
        "assets/**/*.vue"
    ],
    "exclude": [
        "node_modules"
    ]
}
